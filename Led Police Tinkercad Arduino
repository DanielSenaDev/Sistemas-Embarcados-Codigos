#include <avr/io.h>

int main (void)
{
  

  DDRB = B00000110;
  
  
  while (1)
  {	
    int repeatgiro1 = 1;
    int repeatgiro2 = 1;
    int repeatgiro3 = 1;
    int repeatgiro4 = 1;
    
    
    while (repeatgiro1 <=6)
    {
      PORTB = B00000100;
      _delay_ms(600);
			PORTB = B00000010;
			_delay_ms(600);
			repeatgiro1++;
    }
    
    while (repeatgiro2 <=20)
    {
    	PORTB = B00000100;
    	_delay_ms(100);
   	 	PORTB = B00000010;
    	_delay_ms(100);
      repeatgiro2++;
    }
    
    while (repeatgiro3 <=5)
    {
    	PORTB = B00000100;
    	_delay_ms(100);
   	 	PORTB = B00000000;
    	_delay_ms(100);
      repeatgiro3++;
    }
    
    while (repeatgiro4 <=5)
    {
    	PORTB = B00000010;
    	_delay_ms(100);
   	 	PORTB = B00000000;
    	_delay_ms(100);
      repeatgiro4++;
    }
     
  }
  
}
